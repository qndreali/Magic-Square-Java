<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.Cursor?>

<AnchorPane
        fx:id="overPane"
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="450.0"
        prefWidth="450.0"
        style="-fx-background-color: #FFE5EC;"
        xmlns="http://javafx.com/javafx/20.0.1"
        xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.magicsquarejava.OverController">

    <AnchorPane
            fx:id="logoPane"
            prefHeight="100.0"
            prefWidth="450.0">
        <ImageView
                fitHeight="92.0"
                fitWidth="92.0"
                layoutX="179.0"
                layoutY="4.0"
                pickOnBounds="true"
                preserveRatio="true">
            <Image url="@logo.png" />
        </ImageView>
    </AnchorPane>

   <Text
           fx:id="winnerText"
           fill="#e69aa9"
           layoutX="-6.0"
           layoutY="188.0"
           strokeType="OUTSIDE"
           strokeWidth="0.0"
           text="Player A Won!"
           textAlignment="CENTER"
           wrappingWidth="462.13671875">
       <font>
           <Font
                   name="Arial Bold Italic"
                   size="54.0" />
       </font>
   </Text>

   <Button
           fx:id="exitButton"
           layoutX="64.0"
           layoutY="321.0"
           mnemonicParsing="false"
           onMouseClicked="#onExitButtonClick"
           prefHeight="56.0"
           prefWidth="323.0"
           style="-fx-background-color: #FFC2D1; -fx-background-radius: 50;"
           text="EXIT"
           textFill="WHITE">
       <font>
           <Font
                   name="Arial Bold"
                   size="31.0" />
       </font>
       <cursor>
           <Cursor fx:constant="HAND" />
       </cursor>
   </Button>
</AnchorPane>
